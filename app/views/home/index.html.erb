<% unless user_signed_in? && @notes.count > 0 %> 
<%= render 'home/landing'%>
<% else %> 
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">

<div id="notes" class="grid grid-cols-5 auto-cols-max gap-6">
<% @notes.each do |note| %>
<%= link_to note_path(note.id) do %>
<div class="border border-black rounded-md p-4 h-max <%= note.color %> hover:ml-1 hover:border-b-4 hover:border-r-4">
<p class="text-2xl"><%= note.title %></p>
<p class="text-sm text-gray-600 font-medium"><%= note.created_at.strftime("%l:%M %P, %b %d") %></p>
<p class="mt-3 text-gray-800"><%= note.description.truncate(300) %></p>
</div>
<% end %>
<% end %>
</div>
</div>
<% end %> 