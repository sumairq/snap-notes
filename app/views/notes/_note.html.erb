<div id="<%= dom_id note %>" class="border border-black rounded-md py-4 <%= note.color %>">
  <p class="text-3xl px-4 font-light">
    <%= note.title %>
  </p>

  <div class="border-t border-black w-full py-4"></div>

  <p class="text-base px-4">
    <%= note.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this note", note, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this note", edit_note_path(note), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
